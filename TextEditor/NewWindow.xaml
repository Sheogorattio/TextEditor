<Window x:Class="TextEditor.NewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="NewWindow"  Height="130" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Key:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10"/>
        <TextBox x:Name="textBox" Grid.Column="1" Margin="10" Height="20" VerticalAlignment="Top"/>

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Margin="0,30,0,0" HorizontalAlignment="Center">
            <Button Content="Register" Height="30" Width="70" Margin="0,0,10,0" Click="Button_Click"/>
            <Button Content="Cancel" Height="30" Width="70" Click="Click_Close"/>
        </StackPanel>
    </Grid>
</Window>
